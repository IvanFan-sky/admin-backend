<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.admin.module.system.biz.dal.mapper.SysDictDataMapper">

    <!-- 基本的ResultMap定义 -->
    <resultMap id="BaseResultMap" type="com.admin.module.system.biz.dal.dataobject.SysDictDataDO">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="dict_sort" property="dictSort" jdbcType="INTEGER"/>
        <result column="dict_label" property="dictLabel" jdbcType="VARCHAR"/>
        <result column="dict_value" property="dictValue" jdbcType="VARCHAR"/>
        <result column="dict_type" property="dictType" jdbcType="VARCHAR"/>
        <result column="css_class" property="cssClass" jdbcType="VARCHAR"/>
        <result column="list_class" property="listClass" jdbcType="VARCHAR"/>
        <result column="is_default" property="isDefault" jdbcType="INTEGER"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
        <result column="remark" property="remark" jdbcType="VARCHAR"/>
        <result column="create_by" property="createBy" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_by" property="updateBy" jdbcType="VARCHAR"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="version" property="version" jdbcType="INTEGER"/>
        <result column="deleted" property="deleted" jdbcType="INTEGER"/>
    </resultMap>

    <!-- 基本字段列表 -->
    <sql id="Base_Column_List">
        id, dict_sort, dict_label, dict_value, dict_type, css_class, list_class,
        is_default, status, remark, create_by, create_time, update_by, update_time, version, deleted
    </sql>

    <!-- 根据字典类型查询字典数据列表 -->
    <select id="selectByDictType" resultMap="BaseResultMap">
        SELECT 
            <include refid="Base_Column_List" />
        FROM sys_dict_data 
        WHERE dict_type = #{dictType,jdbcType=VARCHAR} 
          AND deleted = 0
        ORDER BY dict_sort ASC, create_time DESC
    </select>

    <!-- 根据字典类型查询启用状态的字典数据列表 -->
    <select id="selectEnabledByDictType" resultMap="BaseResultMap">
        SELECT 
            <include refid="Base_Column_List" />
        FROM sys_dict_data 
        WHERE dict_type = #{dictType,jdbcType=VARCHAR} 
          AND status = 1 
          AND deleted = 0
        ORDER BY dict_sort ASC, create_time DESC
    </select>

    <!-- 根据字典类型和字典值查询字典数据 -->
    <select id="selectByDictTypeAndValue" resultMap="BaseResultMap">
        SELECT 
            <include refid="Base_Column_List" />
        FROM sys_dict_data 
        WHERE dict_type = #{dictType,jdbcType=VARCHAR} 
          AND dict_value = #{dictValue,jdbcType=VARCHAR} 
          AND deleted = 0
    </select>

    <!-- 根据字典类型和字典标签查询字典数据 -->
    <select id="selectByDictTypeAndLabel" resultMap="BaseResultMap">
        SELECT 
            <include refid="Base_Column_List" />
        FROM sys_dict_data 
        WHERE dict_type = #{dictType,jdbcType=VARCHAR} 
          AND dict_label = #{dictLabel,jdbcType=VARCHAR} 
          AND deleted = 0
    </select>

    <!-- 根据字典类型删除字典数据 -->
    <update id="deleteByDictType">
        UPDATE sys_dict_data 
        SET deleted = 1, update_time = NOW() 
        WHERE dict_type = #{dictType,jdbcType=VARCHAR} 
          AND deleted = 0
    </update>

    <!-- 根据字典类型查询最大排序值 -->
    <select id="selectMaxSortByDictType" resultType="java.lang.Integer">
        SELECT MAX(dict_sort) 
        FROM sys_dict_data 
        WHERE dict_type = #{dictType,jdbcType=VARCHAR} 
          AND deleted = 0
    </select>

</mapper>
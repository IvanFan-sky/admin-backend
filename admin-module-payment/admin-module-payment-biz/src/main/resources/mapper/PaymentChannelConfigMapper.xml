<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.admin.module.payment.biz.dal.mapper.PaymentChannelConfigMapper">

    <!-- 根据渠道编码查询配置 -->
    <select id="selectByChannelCode" resultType="com.admin.module.payment.biz.dal.dataobject.PaymentChannelConfigDO">
        SELECT * FROM payment_channel_config
        WHERE channel_code = #{channelCode}
        AND deleted = 0
    </select>

    <!-- 查询启用的渠道配置列表 -->
    <select id="selectEnabledChannels" resultType="com.admin.module.payment.biz.dal.dataobject.PaymentChannelConfigDO">
        SELECT * FROM payment_channel_config
        WHERE status = 1
        AND deleted = 0
        ORDER BY create_time ASC
    </select>

</mapper>
